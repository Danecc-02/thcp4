@model thcp3.Models.Departament

@{
    ViewData["Title"] = "Editar Departamento";

}

<h2>Editar</h2>

<hr />

<div class="row" div>
    <div class="col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
            <input type="hidden" asp-for="DepartamentId" />
            <div class="form-group">
                <label asp-for="DepartamentName" class="control-label"></label>
                <input asp-for="DepartamentName" class="form-control" />
                <span asp-validation-for="DepartamentName" class="text-danger"></span>

                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-primary" />
                    <a asp-action="Index" class=" btn btn-warning">Regresar</a>
                </div>
            </div>
        </form>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

